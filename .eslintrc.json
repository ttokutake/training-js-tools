{
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  "plugins": [
    "import",
    "flowtype"
  ],
  "rules": {
    "no-multi-spaces": ["error", {"exceptions": {
      "ImportDeclaration" : true,
      "VariableDeclarator": true
    }}],
    "object-curly-spacing": [2, "never"],
    "key-spacing"         : ["error", {"align": "colon"}],
    "keyword-spacing"     : [2, {"overrides": {
      "if"    : {"after": false},
      "for"   : {"after": false},
      "while" : {"after": false},
      "switch": {"after": false}
    }}]
  }
}
